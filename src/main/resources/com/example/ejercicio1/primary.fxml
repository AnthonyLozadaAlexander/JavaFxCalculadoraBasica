                  <Font name="Miracode" size="15.0" />
               </font></TextField>
            <TextField fx:id="txtOP2" layoutX="242.0" layoutY="198.0">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></TextField>
            <Label layoutX="138.0" layoutY="148.0" text="Operando 1">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></Label>
            <Label layoutX="138.0" layoutY="203.0" text="Operando 2">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></Label>
            <RadioButton fx:id="rdSuma" layoutX="198.0" layoutY="321.0" mnemonicParsing="false" onAction="#onRdSumaButtonClick" prefHeight="18.0" prefWidth="81.0" text="Suma">
