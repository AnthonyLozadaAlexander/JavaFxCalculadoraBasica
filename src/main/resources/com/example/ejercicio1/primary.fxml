            <Label layoutX="143.0" layoutY="445.0" text="Resultado">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></Label>
            <Label layoutX="198.0" layoutY="65.0" prefHeight="41.0" prefWidth="204.0" text="Mini Calculadora">
               <font>
                  <Font name="Miracode" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnSalir" layoutX="476.0" layoutY="14.0" onAction="#onSalirButtonClick" prefHeight="38.0" prefWidth="100.0" text="Salir">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></Button>
            <Button fx:id="btnLimpiar" layoutX="476.0" layoutY="66.0" onAction="#onLimpiarButtonClick" prefHeight="38.0" prefWidth="100.0" text="Limpiar">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
