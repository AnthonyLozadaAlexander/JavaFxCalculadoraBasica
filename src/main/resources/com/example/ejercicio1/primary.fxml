                  <Font name="Miracode" size="15.0" />
               </font></RadioButton>
            <RadioButton fx:id="rdResta" layoutX="198.0" layoutY="371.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="81.0" text="Resta">
               <font>
                  <Font name="Miracode" size="15.0" />
               </font></RadioButton>
            <RadioButton fx:id="rdMultiplicacion" layoutX="286.0" layoutY="371.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="171.0" text="Multiplicacion">
