                  <Font name="Miracode" size="15.0" />
               </font></Button>
            <Button fx:id="btnLimpiar" layoutX="486.0" layoutY="66.0" onAction="#onLimpiarButtonClick" prefHeight="38.0" prefWidth="90.0" text="Limpiar">
